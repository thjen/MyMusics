<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/backk"/>

    <TextView
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:layout_toRightOf="@+id/ivBack"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/tvTitle"
        android:text="Title"
        android:textSize="25sp"/>

    <ImageView
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/ivConcert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/concert"
        android:layout_below="@+id/tvTitle"
        android:layout_above="@+id/tvTime1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="20sp"
        android:id="@+id/tvTime1"
        android:layout_above="@+id/sb"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="20sp"
        android:id="@+id/tvTime2"
        android:layout_above="@+id/sb"
        android:layout_alignParentRight="true"/>

    <SeekBar
        android:progress="0"
        android:layout_above="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sb"
        android:layout_marginBottom="5dp"/>

    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:id="@+id/rl1"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/ivStop"
            android:id="@+id/ivNext"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/nextn"/>

        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/ivStop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/stopn"/>

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ivStop"
            android:id="@+id/ivPrev"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/prevn"/>

    </RelativeLayout>

</RelativeLayout>